<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MadSplash">

    <ImageView
        android:id="@+id/mark"
        android:layout_width="150dp"
        android:layout_height="206dp"
        android:src="@mipmap/ellipse"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/MAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/museomoderno_bold"
        android:text="MAD"
        android:textColor="#c6a41b"
        android:textSize="50dp"
        app:layout_constraintEnd_toEndOf="@+id/mark"
        app:layout_constraintStart_toStartOf="@+id/mark"
        app:layout_constraintTop_toBottomOf="@+id/mark" />

    <TextView
        android:visibility="invisible"
        android:id="@+id/around"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_semibold"
        android:text="around"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/mark"
        app:layout_constraintStart_toStartOf="@+id/mark"
        app:layout_constraintTop_toBottomOf="@+id/MAD" />

    <TextView
        android:id="@+id/M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/museomoderno_bold"
        android:text="M"
        android:textColor="#FFFFFF"
        android:textSize="70dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/mark"
        app:layout_constraintEnd_toEndOf="@+id/mark"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/mark"
        app:layout_constraintTop_toTopOf="@+id/mark"
        app:layout_constraintVertical_bias="0.191" />

</androidx.constraintlayout.widget.ConstraintLayout>